@model TonaWebApp.Models.HomeIndexViewModel

@{
    ViewData["Title"] = "Homepage";
}

@section CSS
{
    <meta name="viewport" content="width=device-width, initial-scale=1">
    @* mail icon *@
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link
        href="https://fonts.googleapis.com/css2?family=Kanit:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap"
        rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css"/>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Rounded:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200">
}

@section Scripts {
    <script src="~/js/home.js" asp-append-version="true"></script>
}

<div class='homepage'>
    <div class="main-navbar">
        <div class='logo'>
            <a href='#'>
                <img src="https://cdn.discordapp.com/attachments/1212717114238967838/1212717153686655006/tuna.png?ex=65f2d9dc&is=65e064dc&hm=986fc5efbc87b07f09d041abeb8bcd4841610843301f86c54d4dfbc3fe414319&"/>
                <span>Tona</span>
            </a>
        </div>
        <div class="menubar">
            <div class="menu">
                <ul class="menu-link">
                    <li class="navlink">
                        <a href="/History/Upcoming">
                            <i class="fa-solid fa-clock-rotate-left"></i>
                            <span class="nav-text">History</span>
                        </a>
                    </li>
                </ul>
            </div>
        </div>
        <div class="mini-profile">
            <div class="photo">
                <a href="/User/Profile">
                    <img src="https://www.ce.kmitl.ac.th/api/faculty/download/Charoen">
                <span>Tuna</span>
                </a>
               
            </div>
            <div class="mini-content">
                <div class="text">
                    <h4>@Model.User.FirstName @Model.User.LastName</h4>
                    <p>want party</p>
                </div>
            </div>
        </div>

    </div>
    <div class="b-centerboard">
        <div class="box">
            <div class="searchbox">
                <input type="text" placeholder="Search here...">
                <label for="" class="icon">
                    <i class="fa fa-search"></i>
                </label>
            </div>
        </div>
        <div class="tag-bar">
                <div class="tag-group">
                    <button i class="fa-solid fa-heart">
                        <span>Love</span> </i></button>
                    <button i class='bx bx-bowl-rice ' ><span>Food</span></i></button>
                    <button i class='bx bxs-briefcase-alt-2'><span>Travel</span></i></button>
                    <button i class="fa-solid fa-dumbbell"><span>Sport</span></i></button>
                    <button i class="fa-solid fa-school"><span>Study</span></i></button>
                    <button i class="fa-solid fa-gamepad"><span>Game</span></i></button>
                </div>
        </div>
        <div class="board-container">
            @foreach(var board in @Model.Boards)
            {
                @* @{
                    string formattedDueDate = "Due Date: " + board.EndTime.ToString("dd MMMM yyyy");
                } *@
                <a href="/Board/Detail/@(board.Id)" class="board-card">
                    <div class="dashcard">
                        <div class="projectTop">
                            <h2>@board.Name<br><span>@board.Auther.FirstName @board.Auther.LastName</span></h2>
                        </div>
                        <div class="projectProgress">
                            <div class="process">
                                <h2>@(board.IsActive ? "Active" : "Inactive")</h2>
                            </div>
                        </div>
                    </div>
                    <div class="cardtrail">
                        <div class="task">
                            <h2>Task Done: <bold>@board.MemberList.Count</bold> / @board.MaxMember</h2>
                            <span class="line"></span>
                        </div>
                        <div class="due">
                            @* <h2>@formattedDueDate</h2> *@
                        </div>
                    </div>
                </a>
            }
        </div>    
    </div>
    <div class="c">
        <div class="c-wrapper">
            <div class='wrapper'>
                <header>
                <p class="current-date"></p>
                <div class="icons">
                <span id="prev" class="material-symbols-rounded">chevron_left</span>
                <span id="next" class="material-symbols-rounded">chevron_right</span>
                </div>
                </header>
            <div class="calendar">
                <ul class="weeks">
                <li>Sun</li>
                <li>Mon</li>
                <li>Tue</li>
                <li>Wed</li>
                <li>Thu</li>
                <li>Fri</li>
                <li>Sat</li>
                </ul>
                <ul class="days"></ul>
            </div>
        </div>
        <a class="create-board-btn" href="/Board/CreateBoard">Create Board</a>

    </div>
</div>


