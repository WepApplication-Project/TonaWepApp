    </nav>
        <div class="table-box">
            <div class="table-head table-row">
                <div class="table-cell first-cell tablew1">
                    <p>Date</p>
                </div>
                <div class="table-cell tablew2">
                    <p>Tag</p>
                </div>
                <div class="table-cell tablew3">
                    <p>Description</p>
                </div>
                <div class="table-cell last-cell tablew2">
                    <p>Status</p>
                </div>  
            </div>
            @foreach(var board in @Model.Boards)
            {
                string formattedDueDate = board.EndTime.ToString("dd MMMM yyyy");

                <div class="table-body table-row">
                    <div class="table-cell first-cell tablew1 date-cell">
                        <p>@formattedDueDate</p>
                    </div>
                    <div id = "tag" class="table-cell tablew2 his-tag tag-cell">
                        <p>@board.Tag</p>
                    </div>
                    <div class="table-cell description-cell tablew3">
                        <p>@board.Name</p>
                    </div>
                    <div class="table-cell last-cell tablew2 status-cell" style="font-weight: bold;">
                        <p style="color: @(!board.IsActive ? "green" : "#176B87")"> @(board.IsActive ? "Confirmed" : "Completed")</p>
                    </div>
                </div>
            }
        </div>
    </div>
</div>