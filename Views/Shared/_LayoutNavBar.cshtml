<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>TonaWebApp - @ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/auth.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/board.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/history.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/profile.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/home.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/notification.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/TonaWebApp.styles.css" asp-append-version="true" />
    @* BOXICON CDN *@
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>

    @* FONT *@
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link
        href="https://fonts.googleapis.com/css2?family=Kanit:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap"
        rel="stylesheet">
    @RenderSection("CSS", required: false)
    
</head>
<body>
    <div class="main-nav">
    <a class = "tona-logo"href="/Home/Index/">
        <img class = "logo nav-box-inline" src="https://cdn.discordapp.com/attachments/1212717114238967838/1212717153686655006/tuna.png?ex=65f2d9dc&is=65e064dc&hm=986fc5efbc87b07f09d041abeb8bcd4841610843301f86c54d4dfbc3fe414319&" alt="">
        <p class="nav-box-inline nav-text-tona" style="padding-left:10px">Tona</p>
    </a>
    <input type="checkbox" id="nav_check" hidden>
        <nav>
            <ul class="box-container">
                <li>
                    <a class="" href="/History/Upcoming">
                        <i class='bx bx-history' style='color:#176b87; scale:200%; margin:10px' ></i>
                        <p class="nav-box nav-text nav-box-inline">History</p>
                    </a>
                </li>
                <li>
                    <a class="" href="/Notification">
                        <i class='bx bx-bell' style='color:#176b87; scale:200%; margin:10px'>
                            <div class="countNum">99+</div>
                        </i>
                        <p class="nav-box nav-text nav-box-inline">Notification</p>
                    </a>
                </li>
                <li>
                    <a class="" href="/User/Profile">
                        <i class='bx bx-user' style='color:#176b87; scale:200%; margin:10px'  ></i>
                        <p class="nav-box nav-text nav-box-inline">Profile</p>
                    </a>
                </li>
                <li>
                    <a class="" href="/Auth/Logout">
                        <i class='bx bx-log-out' style='color:#176b87; scale:200%; margin:10px' ></i>
                        <p class="nav-box nav-text nav-box-inline">Log Out</p>
                    </a>
                </li>
            </ul>
        </nav>
        <label style="padding-right : 20px " for="nav_check" class="hamburger">
            <div></div>
            <div></div>
            <div></div>
        </label>
</div>
<div style="margin-top:100px">
    @RenderBody()
</div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="~/js/login.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>