    <div class="edit-profile-section">
        <div class="edit-profile-card">
            <h2>Edit Profile</h2>

            <form asp-action="EditProfile" method="post">
                <div class="edit-form-group">
                    <label class="edit-label" for="FirstName">First Name</label>
                    <input class="edit-input" type="text" id="FirstName" name="FirstName" value="John" required>
                </div>

                <div class="edit-form-group">
                    <label class="edit-label" for="LastName">Last Name</label>
                    <input class="edit-input" type="text" id="LastName" name="LastName" value="Doe" required>
                </div>

                <div class="edit-form-group">
                    <label class="edit-label" for="Phone">Phone</label>
                    <input class="edit-input" type="tel" id="Phone" name="Phone" value="123-456-7890" required>
                </div>

                <div class="edit-form-group">
                    <label class="edit-label" for="Email">Email</label>
                    <input class="edit-input" type="email" id="Email" name="Email" value="john.doe@example.com" required>
                </div>

                <!-- Add more fields as needed -->

                <div class="edit-form-group">
                    <button class="edit-button" type="submit">Save Changes</button>
                </div>
            </form>
        </div>
    </div>
</div>

