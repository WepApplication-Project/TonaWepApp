@model TonaWebApp.Models.User

@await Component.InvokeAsync("Navbar", Model.Id)

<div class="edit-profile-container">
    <div class="edit-profile-section">
        <div class="edit-profile-card">
            <h1>Edit Profile</h1>
            <div class="avatar-container">
                @if (!string.IsNullOrEmpty(Model.ImageUrl))
                {
                    <img src="@Model.ImageUrl" alt="Profile Image" class="avatar">
                }
                else
                {
                    <img src="https://p7.hiclipart.com/preview/782/114/405/5bbc3519d674c.jpg" alt="Mockup Image" class="avatar">
                }
            </div>
            <form asp-asp-controller="User" asp-action="UpdateProfile" method="post" enctype="multipart/form-data">
                <div class="edit-form-group">
                    <label class="edit-label" for="FirstName">First Name</label>
                    <input class="edit-input" type="text" id="FirstName" name="FirstName" value="@Model.FirstName" required>
                </div>

                <div class="edit-form-group">
                    <label class="edit-label" for="LastName">Last Name</label>
                    <input class="edit-input" type="text" id="LastName" name="LastName" value="@Model.LastName" required>
                </div>

                <div class="edit-form-group">
                    <label class="edit-label" for="Phone">Phone</label>
                    <input class="edit-input" type="tel" id="Phone" name="Phone" value="@Model.Phone" required>
                </div>

                <div class="edit-form-group">
                    <label class="edit-label" for="Email">Email</label>
                    <input class="edit-input" type="email" id="Email" name="Email" value="@Model.Email"
                        required>
                </div>

                <div class="edit-form-group">
                    <label class="edit-label" for="ProfilePicture">Profile Picture</label>
                    <input class="edit-input" type="file" id="ProfilePicture" name="profilePicture">
                    <p class="edit-help-text">Choose a new profile picture (optional)</p>
                </div>

                <div class="edit-form-group">
                    <button class="edit-button" type="submit">Save Changes</button>
                </div>
            </form>
        </div>
    </div>
</div>
